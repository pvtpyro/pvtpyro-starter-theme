{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 2,
	"title": "Private Pyro's Start Theme",
	"settings": {
		"appearanceTools": true,
		"useRootPaddingAwareAlignments": true,
		"layout": {
			"contentSize": "750px",
			"wideSize": "1200px"
		},
		"color": {
			"palette": [
				{
					"name": "Darkest",
					"slug": "darkest",
					"color": "#131C23"
				},
				{
					"name": "Dark",
					"slug": "dark",
					"color": "#18262E"
				},
				{
					"name": "Light",
					"slug": "light",
					"color": "#ffffff"
				},
				{
					"name": "Subtle",
					"slug": "subtle",
					"color": "#52595D"
				},
				{
					"name": "Primary",
					"slug": "primary",
					"color": "#C0EB0F"
				},
				{
					"name": "Primary Hover",
					"slug": "primary-hover",
					"color": "#99bb0c"
				}
			],
			"duotone": [
				{
					"colors": [
						"#131C23",
						"#ffffff"
					],
					"slug": "dark-light",
					"name": "Dark Light"
				},
				{
					"colors": [
						"#131C23",
						"#C0EB0F"
					],
					"slug": "lime-and-black",
					"name": "Lime and Black"
				}
			],
			"gradients": [
				{
					"slug": "hot-pink",
					"gradient": "linear-gradient(30deg,#ff0099 0%, #000 100%)",
					"name": "Hot Pink"
				},
				{
					"slug": "fun-yellow",
					"gradient": "linear-gradient(180deg,yellow 0%,black 100%)",
					"name": "Fun Yellow"
				}
			]
		},
		"typography": {
			"fluid": true,
			"fontFamilies": [
				{
					"fontFamily": "Georgia,serif",
					"slug": "georgia",
					"name": "Georgia"
				},
				{
					"fontFamily": "Verdana,sans-serif",
					"slug": "verdana",
					"name": "Verdana"
				},
				{
					"fontFamily": "Courier New, monospace",
					"slug": "mono",
					"name": "Courier New"
				}
			],
			"fontSizes": [
				{
					"fluid": false,
					"name": "Small",
					"size": "0.9rem",
					"slug": "small"
				},
				{
					"fluid": false,
					"name": "Medium",
					"size": "1.1rem",
					"slug": "medium"
				},
				{
					"fluid": false,
					"name": "Lead",
					"size": "1.3rem",
					"slug": "lead"
				},
				{
					"fluid": {
						"min": "1.39rem",
						"max": "1.85rem"
					},
					"name": "Large",
					"size": "1.85rem",
					"slug": "large"
				},
				{
					"fluid": {
						"min": "1.85rem",
						"max": "2.5rem"
					},
					"name": "Extra Large",
					"size": "2.5rem",
					"slug": "x-large"
				},
				{
					"fluid": {
						"min": "2.5rem",
						"max": "3.5rem"
					},
					"name": "Extra Extra Large",
					"size": "3.5rem",
					"slug": "xx-large"
				}
			],
			"writingMode": true
		},
		"spacing": {
			"margin": true,
			"padding": true,
			"blockGap": true,
			"units": [
				"px",
				"em",
				"rem",
				"vh",
				"vw",
				"%"
			]
		},
		"custom": {
			"line-height": {
				"body": 1.7,
				"heading": 1.2
			}
		}
	},
	"styles": {
		"typography": {
			"fontFamily": "var(--wp--preset--font-family--verdana)",
			"lineHeight": "1.7",
			"fontSize": "var(--wp--preset--font-size--medium)"
		},
		"color": {
			"background": "var(--wp--preset--color--darkest)",
			"text": "var(--wp--preset--color--light)"
		},
		"elements": {
			"link": {
				"color": {
					"text": "var(--wp--preset--color--primary)"
				},
				":hover": {
					"color": {
						"text": "var(--wp--preset--color--primary-hover)"
					}
				}
			},
			"button": {
				"border": {
					"radius": "5px"
				},
				"color": {
					"background": "var(--wp--preset--color--primary)",
					"text": "var(--wp--preset--color--darkest)"
				},
				":hover": {
					"color": {
						"background": "var(--wp--preset--color--primary-hover)"
					}
				},
				"typography": {
					"fontWeight": "bold",
					"fontFamily": "georgia"
				}
			},
			"heading": {
				"color": {
					"text": "var(--wp--preset--color--primary)"
				},
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--georgia)"
				}
			},
			"h1": {
				"typography": {
					"fontSize": "3rem"
				}
			},
			"h2": {
				"typography": {
					"fontSize": "2.2rem"
				}
			},
			"h3": {
				"typography": {
					"fontSize": "1.6rem"
				}
			},
			"h4": {
				"typography": {
					"fontSize": "1rem"
				}
			},
			"cite": {
				"color": {
					"text": "var(--wp--preset--color--subtle)"
				}
			}
		},
		"spacing": {
			"blockGap": "1.5rem",
			"padding": {
				"left": "15px",
				"right": "15px"
			}
		},
		"blocks": {
			"core/group": {
				"spacing": {
					"padding": {
						"top": "0",
						"right": "15px",
						"bottom": "0",
						"left": "15px"
					}
				}
			},
			"core/separator": {
				"color": {
					"text": "var(--wp--preset--color--subtle)"
				}
			},
			"core/details": {
				"css": ".wp-block-details summary::marker {color: var(--wp--preset--color--primary)}"
			}
		}
	},
	"templateParts": [
		{
			"name": "header",
			"title": "Header",
			"area": "header"
		},
		{
			"name": "footer",
			"title": "Footer",
			"area": "Footer"
		}
	],
	"customTemplates": [
		{
			"name": "sidebar",
			"title": "Content with Sidebar",
			"postTypes": [
				"page",
				"post"
			]
		}
	],
	"patterns": []
}